                            </div><!--col-xs-5-->
                            <div class="col-xs-5">
                                <i class="fa fa-credit-card-alt"></i>
                                <label for="cardnumber">Card Number</label>
                                <input id="cardnumber" placeholder="xxxx xxxx xxxx xxxx">
                            </div><!--col-xs-5-->
                        </div><!--row end-->
                        <div class="row row-three">
                            <div class="col-xs-2">
                                <i class="fa fa-calendar"></i>
                                <label for="date">Valid thru</label>
